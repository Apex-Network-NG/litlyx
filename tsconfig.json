{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "moduleResolution": "nodenext",
        "paths": {
            "@schema/*": [
                "./shared/schema/*"
            ],
            "@services/*": [
                "./shared/services/*"
            ],
            "@data/*": [
                "./shared/data/*"
            ],
            "@functions/*": [
                "./shared/functions/*"
            ],
            "@utils/*": [
                "./shared/utils/*"
            ]
        },
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}