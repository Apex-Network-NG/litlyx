{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "NodeNext",
        "target": "ESNext",
        "esModuleInterop": true,
        "outDir": "dist",
        "types": [
            "node",
            "jest"
        ],
        "paths": {
            "@schema/*": [
                "../shared/schema/*"
            ],
            "@services/*": [
                "../shared/services/*"
            ],
            "@data/*": [
                "../shared/data/*"
            ],
            "@functions/*": [
                "../shared/functions/*"
            ],
            "@utils/*": [
                "../shared/utils/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "scripts/**/*.ts",
        "tests/**/*.test.ts",
        "tests/utils.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}